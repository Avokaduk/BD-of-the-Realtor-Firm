@page
@model BD_of_the_Realtor_Firm.Pages.ZF.IndexModel
@{
    <div class="accordion" id="accordionExample">
        <div class="card">
            <div class="card-header" id="headingOne">
                <h5 class="mb-0">
                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Запросы
                    </button>
                </h5>
            </div>

            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body">
                    <a class="nav-link text-dark" asp-area="" asp-page="/ZF/requests/personnel_department">Отдел кадров</a>
                    <a class="nav-link text-dark" asp-area="" asp-page="/ZF/requests/sell">Покупка</a>
                    <a class="nav-link text-dark" asp-area="" asp-page="/ZF/requests/buy">Продажа</a>
                    <a class="nav-link text-dark" asp-area="" asp-page="/ZF/requests/contracts concluded">Заключенные договора</a>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header" id="headingTwo">
                <h5 class="mb-0">
                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        Фильтры
                    </button>
                </h5>
            </div>
            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                <div class="card-body">
                    <form>
                        Отобразить сотрудников с должностью:
                        <select asp-items="Model.Position" name="id" class="form-control-sm">
                            <option value="-1">Должность не выбрана</option>
                        </select>
                        <button asp-page="filters/staffs" class="btn btn-primary">Отфильтровать</button>
                    </form>
                    <br />

                    <form>
                        Отобразить продаваемые квартиры данного вида:
                        <select asp-items="Model.Sell" name="id" class="form-control-sm">
                            <option value="-1">Вид не выбран</option>
                        </select>
                        <button asp-page="filters/Sells" class="btn btn-primary">Отфильтровать</button>
                    </form>
                    <br />

                    <form>
                        Отобразить покупаемые квартиры данного вида:
                        <select asp-items="Model.Buy" name="id" class="form-control-sm">
                            <option value="-1">Вид не выбран</option>
                        </select>
                        <button asp-page="filters/Buy" class="btn btn-primary">Отфильтровать</button>
                    </form>
                    <br />

                    <form>
                        Отобразить договора, заключенные данными сотрудниками:
                        <select asp-items="Model.Contrac" name="Mark" class="form-control-sm">
                            <option value="-1">Сотрудник не выбран</option>
                        </select>
                        <button asp-page="filters/Contrac" class="btn btn-primary">Отфильтровать</button>
                    </form>
                    <br />
                </div>
            </div>
        </div>
    </div>
}
