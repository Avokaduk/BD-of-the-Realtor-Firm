@page
@model BD_of_the_Realtor_Firm.Pages.Servis_.EditModel

@{
    ViewData["Title"] = "Изменить информацию";
}

<h1>Изменить</h1>

<h4>Вид услуг</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Servis.ID" />
            <div class="form-group">
                <label asp-for="Servis.Servis_ID" class="control-label"></label>
                <input asp-for="Servis.Servis_ID" class="form-control" />
                <span asp-validation-for="Servis.Servis_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servis.Servis_name" class="control-label"></label>
                <input asp-for="Servis.Servis_name" class="form-control" />
                <span asp-validation-for="Servis.Servis_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servis.Description" class="control-label"></label>
                <input asp-for="Servis.Description" class="form-control" />
                <span asp-validation-for="Servis.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servis.Price" class="control-label"></label>
                <input asp-for="Servis.Price" class="form-control" />
                <span asp-validation-for="Servis.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к таблице</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
